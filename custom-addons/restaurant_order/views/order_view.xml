<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_tree_order" model="ir.ui.view">
            <field name="name">oder.tree</field>
            <field name="model">restaurant.order</field>
            <field name="arch" type="xml">
                <tree string="Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="order_date"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                </tree>
            </field>
        </record>

        <record id="view_form_order" model="ir.ui.view">
            <field name="name">order.form</field>
            <field name="model">restaurant.order</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <sheet>

                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="order_date"/>
                            <field name="state"/>
                            <field name="order_line_ids"/>
                            <field name="total_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_order" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">restaurant.order</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_order_root"
            name="Order food"
            sequence="10"/>

        <menuitem
            id="menu_order"
            name="MÃ³n"
            parent="menu_order_root"
            action="action_order"
            sequence="10"/>
    </data>
</odoo>