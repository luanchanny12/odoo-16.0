<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_tree_library_category" model="ir.ui.view">
            <field name="name">library.category.tree</field>
            <field name="model">library.book_category</field>
            <field name="arch" type="xml">
                <tree string="Categories">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_form_library_category" model="ir.ui.view">
            <field name="name">library.category.form</field>
            <field name="model">library.book_category</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        # bên trong này phài thêm một cái notebook
                        <notebook>
                            <page string="Thể loại của sách?">
                                <field name="book_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="publication_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_library_category" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">library.book_category</field>
            <field name="view_mode">tree,form</field>
        </record>
<!--tên model phải đặt giống hệt ở trong model nhé k phải thay dầu _ bằng dấu . đâu-->
        <menuitem
            id="menu_library_category"
            name="Thể loại sách"
            parent="menu_library_root"
            action="action_library_category"
            sequence="30"/>
<!--      action này lấy ở id của action trên nhé-->
    </data>
</odoo>