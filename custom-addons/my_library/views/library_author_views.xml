<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_tree_library_author" model="ir.ui.view">
            <field name="name">library.author.tree</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <tree string="Authors">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_form_library_author" model="ir.ui.view">
            <field name="name">library.author.form</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <form string="Author">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="biography"/>
                        </group>
                        <notebook>
                            <page string="sách đã viết">
                                <field name="book_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="publication_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_library_author" model="ir.actions.act_window">
            <field name="name">Authors</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_library_author"
            name="tác giả"
            parent="menu_library_root" action="action_library_author"
            sequence="20"/>
    </data>
</odoo>