<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_library_borrow" model="ir.actions.report">
            <field name="name">Phiếu Mượn Sách</field>
            <field name="model">library.borrow</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">my_library.report_borrow_template</field>
            <field name="report_file">my_library.report_borrow_template</field>
            <field name="print_report_name">'Phieu_Muon_%s' % object.borrower_id.name</field>
            <field name="binding_model_id" ref="model_library_borrow"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_borrow_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">

                    <t t-call="web.external_layout">

                        <div class="page" style="font-family: 'Georgia', serif; color: #333;">

                            <style>
                                .report-header {
                                    border-bottom: 3px solid #2c3e50;
                                    padding-bottom: 10px;
                                    margin-bottom: 30px;
                                }
                                .report-title {
                                    color: #2c3e50;
                                    font-weight: bold;
                                    font-size: 28px;
                                    text-transform: uppercase;
                                    letter-spacing: 2px;
                                }
                                .info-box {
                                    background-color: #f8f9fa;
                                    border-radius: 10px;
                                    padding: 20px;
                                    margin-bottom: 30px;
                                    border: 1px solid #e9ecef;
                                }
                                .table-custom th {
                                    background-color: #2c3e50;
                                    color: white;
                                    text-align: center;
                                    vertical-align: middle;
                                }
                                .table-custom td {
                                    vertical-align: middle;
                                }
                                .signature-box {
                                    margin-top: 60px;
                                }
                                .signature-line {
                                    border-top: 1px dashed #000;
                                    width: 80%;
                                    margin: 50px auto 10px auto;
                                }
                            </style>

                            <div class="text-center report-header">
                                <img src="/my_library/static/description/logo.jpg"
                                     style="max-height: 100px; margin-bottom: 15px;"/>

                                <h2 class="report-title">Phiếu Mượn Sách</h2>

                                <div>
                                    <span class="badge rounded-pill text-white"
                                          t-att-class="'bg-success' if o.state == 'returned' else 'bg-warning'"
                                          style="font-size: 14px; padding: 8px 15px;">
                                        Trạng thái: <span t-field="o.state"/>
                                    </span>
                                </div>
                            </div>

                            <div class="info-box">
                                <div class="row">
                                    <div class="col-6">
                                        <p><strong>Người mượn:</strong> <span t-field="o.borrower_id" style="font-size: 18px;"/></p>
                                        <p><strong>Địa chỉ:</strong> <span t-field="o.borrower_id.contact_address"/></p>
                                    </div>
                                    <div class="col-6 text-right">
                                        <p><strong>Ngày mượn:</strong> <span t-field="o.borrow_date"/></p>
                                        <p><strong>Mã:</strong> #<span t-esc="o.id"/></p>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-bordered table-custom">
                                <thead>
                                    <tr>
                                        <th style="width: 50%;">Tên Sách</th>
                                        <th style="width: 30%;">Tác giả</th>
                                        <th style="width: 20%;">Ngày hẹn trả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong t-field="o.book_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.book_id.author_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <strong t-field="o.return_date" style="color: #c0392b;"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="row signature-box">
                                <div class="col-6 text-center">
                                    <p><strong>Thủ thư</strong></p>
                                    <p class="text-muted small">(Ký và ghi rõ họ tên)</p>
                                    <div class="signature-line"></div>
                                </div>
                                <div class="col-6 text-center">
                                    <p><strong>Người mượn</strong></p>
                                    <p class="text-muted small">(Tôi cam kết trả sách đúng hạn)</p>
                                    <div class="signature-line"></div>
                                    <p><span t-field="o.borrower_id.name"/></p>
                                </div>
                            </div>

                            <div class="text-center mt-5 text-muted font-italic">
                                <small>Cảm ơn bạn đã sử dụng dịch vụ của Thư viện!</small>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>