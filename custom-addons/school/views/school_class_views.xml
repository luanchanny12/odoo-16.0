<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="school_class_view_form" model="ir.ui.view">
            <field name="name">school.class.form</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <form string="Class">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="homeroom_teacher_id"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_class_view_tree" model="ir.ui.view">
            <field name="name">school.class.tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree string="Classes">
                    <field name="name"/>
                    <field name="homeroom_teacher_id"/>
                </tree>
            </field>
        </record>

        <record id="school_class_action" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="res_model">school.class</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>