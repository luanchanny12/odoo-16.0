<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <!-- TREE VIEW -->
    <record id="view_x_student_tree" model="ir.ui.view">
        <field name="name">x.student.tree</field>
        <field name="model">x.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_code"/>
                <field name="birth_date"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="major"/>
                <field name="state"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_x_student_form" model="ir.ui.view">
        <field name="name">x.student.form</field>
        <field name="model">x.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                        <button name="action_pause"
                                string="Táº¡m nghá»‰"
                                type="object"
                                class="btn-primary"
                                groups="master_school.group_teacher,base.group_system"
                                attrs="{'invisible': [('state', '=', 'paused')]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                            <field name="student_code"/>
                            <field name="birth_date"/>
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="major"/>
                            <field name="state"/>
                            <field name="age" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    </data>
</odoo>
